{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "google"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-unused-vars": "off",
    "quotes": ["warn", "double"],
    "linebreak-style": ["error", "windows"],
    "spaced-comment": ["warn", "always"],
    "max-len": "off",
    "comma-dangle": ["warn", {
      "arrays": "always-multiline",
      "objects": "always-multiline"
    }],
    "keyword-spacing": "warn",
    "new-cap": "off",
    "require-jsdoc": "off",
    "semi": "error",
    "brace-style": "warn",
    "padded-blocks": "off",
    "prefer-const": "warn",
    "object-curly-spacing": ["warn", "always"],
    "camelcase": "off",
    "eqeqeq": "error"
  }
}